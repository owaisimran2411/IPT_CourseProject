@model IEnumerable<IPT_project.Models.CarDetail.Rootobject>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Welcome To World of Cars</h2>
<div class="container-sm my-0" >
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://mcdn.wallpapersafari.com/medium/67/93/56xGT3.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Honda Corolla</h5>
                    <p>Riding The beast</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://www.autoguide.com/blog/wp-content/gallery/new-honda-civic-vs-toyota-corolla/Honda-Civic-vs-Toyota-Corolla-spec-comparison-1.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Honda Civic</h5>
                    <p>Riding The beast</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://wallpapercave.com/wp/wp4553201.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Suzuki Alto</h5>
                    <p>Riding The beast.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<br />
<br />

<h2 style="text-align:center">List of Available Cars</h2>
<br />


<div class="card-group">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card border border-light mb-3" style="width:20rem">
                <div style="height: 150px; background-color:black; background-size: cover; justify-items:center "> <img src=@item.image style=" height:100%; display: flex; "></div>

                <div class="card-body">
                    <h5 class="card-title">@item.description</h5>
                    <p class="card-text"><b>Condition:</b> @item.itemCondition</p>
                    <p class="card-text"><b>Fuel Type:</b> @item.fuelType</p>
                    <p class="card-text"><b>Condition:</b> @item.itemCondition</p>
                    <p class="card-text"><b>Vehicle Engine:</b> @item.vehicleEngine.engineDisplacement</p>
                    <p class="card-text"><b>Model Date:</b> @item.modelDate</p>
                    <p class="card-text"><b>Mileage used:</b> @item.mileageFromOdometer</p>
                    <h3 class="card-text text-center text-capitalize" style="color:lightgreen"><b>Pice:</b> @item.offers.price <span>@item.offers.priceCurrency</span></h3>
                    <div class="col text-center">
                        @{ string[] arr = item.offers.url.Split('-');
                            int index = arr.Length - 1; }
                        <a href=@Url.Action("Detail","Home",new {carID = arr[index]  }) class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        </div>
        <br />
    }

</div>


